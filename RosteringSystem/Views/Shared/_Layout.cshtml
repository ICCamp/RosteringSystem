<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IC Roster</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <style>
        .form-update {
            position: fixed;
            top: -500px;
            left: 40%;
            margin: 40px;
            background-color: #e8e8e8;
        }

        #table-update {
            margin: 50px;
        }

            #table-update tr td {
                padding: 15px;
            }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("IC Roster", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                    <li>@Html.ActionLink("Shift", "Index", "Shift")</li>
                    <li>@Html.ActionLink("Staff", "Index", "Staff")</li> 
                    <li>@Html.ActionLink("Role", "Index", "Roles")</li>
                    <li>@Html.ActionLink("Job", "Index", "Jobs")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav navbar-right">@Html.ActionLink("Login", "Index", "Login")</li>
                    @*   <li>@Html.ActionLink("Logout", "Contact", "Home")</li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="col-md-12 col-sm-12 text-center container-fluid">
            <p>&copy; @DateTime.Now.Year - iScholarship,Inc. All Rights Reserved.</p>
            <p>Hyungoo | Romelyn | Kishor | Minh | FeiFei | Saifal | Mickey</p>
        </footer>
    </div>

   
   
    @RenderSection("scripts", required: false)
</body>
</html>
